.indexContainer{
  height: 330rpx;
}

.indexContainer .nav{
  width: 100%;
  height: 100%
}

.box{
  display: flex;
  justify-content: space-around;
}

.box .box1{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.box .box1 .iconfont{
  width: 100rpx;
  height: 100rpx;
  color: #fff;
  font-size: 50rpx;
  line-height: 100rpx;
  background-color: rgba(240,16,16);
  border-radius: 50%;
  margin: 20rpx 0;
}

.box .box1 text{
  font-size: 28rpx;
}

.buttons{
  margin: 0 20rpx;
}



.buttons .buttons-box2{
  display: flex;
  height: 300rpx;
}

.buttons .buttons-box2 .buttons-viex{
  width: 200rpx;
  margin-right: 20rpx;
}

.buttons .buttons-box2 .buttons-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.buttons .buttons-box2 .buttons-scrs{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.rankList{
  margin: 0 20rpx;
}

.rankList .rankList-swipt{
  display: flex;
  height: 450rpx;
}

.rankList .rankList-swipt .rankList-view{
  align-items: center;
  padding: 10rpx 0;
}

.rankList .rankList-swipt .rankList-view{
  display: flex;
  width: 97%;
  background-color: pink;
}

.rankList .rankList-swipt .rankList-view image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.rankList .rankList-swipt .rankList-view text{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  flex-shrink: 0;
}

.rankList .rankList-swipt .rankList-view view{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

